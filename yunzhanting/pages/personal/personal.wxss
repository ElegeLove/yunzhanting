/* pages/personal/personal.wxss */
/* 顶部 */
.page_title {
  font-size: 36rpx;
  font-family: "MicrosoftYaHei";
  font-weight: 400;
}

.cu-bar .action:first-child>text[class*="cuIcon-"] {
  margin-left: 0rpx;
  margin-right: 0.3em;
}

.cu-bar .action>text[class*="cuIcon-"], .cu-bar .action>view[class*="cuIcon-"] {
  font-size: 0rpx;
}

/* 头像 */
.userinfo_main{
  position: relative;
}
.userinfo {
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, #37b2f7 0%, #abe72a 100%);
}

.user_icon {
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
}
.user_icon image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user_name {
  font-size: 36rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #fff;
  line-height: 59rpx;
  text-align: center;
}

.user_binding {
  position: absolute;
  top: 40rpx;
  right: 0;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 20rpx 0 0 20rpx;
  padding: 8rpx 5rpx 9rpx 13rpx;
}

.user_binding_info {
  width: 22rpx;
  height: 18rpx;
}

.user_binding_text {
  margin: 0 10rpx 0 9rpx;
  font-size: 24rpx;
  font-family: "PingFang-SC-Regular";
  font-weight: 400;
  color: #fff;
}

.user_binding_right {
  width: 9rpx;
  height: 16rpx;
}

.user_box {
  width: 100%;
  padding: 0 30rpx;
  position: absolute;
  top: 300rpx;
}

.user_main {
  width: 100%;
  padding: 30rpx 35rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.user_main_list {
  width: 50%;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  text-align: center;
}

.user_main_icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.user_main_info {
  font-size: 30rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #333;
  line-height: 36rpx;
}

/* border */

.border_btm {
  border-bottom: 1rpx solid #eee;
}

.border_left {
  border-left: 1rpx solid #eee;
}
