/* pages/page/personal/personalInfo/personalInfo.wxss */

/* 顶部 */
.page_title {
  font-size: 36rpx;
  font-family: "MicrosoftYaHei";
  font-weight: 400;
}

.header_head {
  width: 100%;
  height: 150rpx;
  padding-top: 50rpx;
  padding-left: 28rpx;
  background: linear-gradient(90deg, #37b2f7 0%, #abe72a 100%);
  position: fixed;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
}

.header_back {
  width: 23rpx;
  height: 41rpx;
  margin-right: 30rpx;
}

.header_text {
  font-size: 36rpx;
  font-family: "MicrosoftYaHei";
  font-weight: 400;
  color: #fff;
}

.header_search {
  width: 100%;
  height: 114rpx;
  margin-top: 150rpx;
  font-size: 32rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #a9a9a9;
  background: linear-gradient(90deg, #37b2f7 0%, #abe72a 100%);
}

.cu-bar .search-form {
  background: #fff;
}

.header_icon {
  font-size: 38rpx;
  color: #a9a9a9;
}

/* 用户头像、姓名 */

.personalInfo_userIcon {
  width: 100%;
  padding: 30rpx 0 30rpx 31rpx;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.user_icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 22rpx;
}
.user_icon image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user_name {
  font-size: 34rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #333;
}

/* 表单 */

.myForm {
  width: 100%;
  padding-left: 25rpx;
  background: #fff;
}

.form_name {
  width: 100%;
  padding: 34rpx 0 34rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  font-family: "PingFang-SC-Regular";
  font-weight: 400;
  color: #2b2828;
  line-height: 36rpx;
}

.form_right {
  display: flex;
  align-items: center;
  padding-right: 30rpx;
}

input {
  text-align: right;
}
.form_wxPhone{
  line-height: 30rpx;
  position: static;
  border: 0;
  outline-style: none;
  background: #fff;
  font-size: 28rpx;
  font-family: "PingFang-SC-Regular";
  font-weight: 400;
  color: #999;
  padding: 0;
}

.form_right_icon {
  width: 15rpx;
  height: 26rpx;
  margin-left: 26rpx;
}

.form_name_text {
  font-size: 28rpx;
  font-family: "PingFang-SC-Regular";
  font-weight: 400;
  color: #999;
  line-height: 36rpx;
}

.cu-form-group {
  border-bottom: 1rpx solid #f5f5f5;
  padding-left: 0;
}

/* 底部按钮 */
.btn{
  width: 100%;
  height: 100rpx;
  color: #fff;
  background: #37b2f7;
}
button{
  border-radius: 0;
}
