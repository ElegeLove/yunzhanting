/* pages/page/home/explosives/explosives.wxss */

/* 顶部 */

.page_title {
  font-size: 36rpx;
  font-family: "MicrosoftYaHei";
  font-weight: 400;
}

.header_head {
  width: 100%;
  height: 150rpx;
  padding-top: 50rpx;
  padding-left: 28rpx;
  background: linear-gradient(90deg, #37b2f7 0%, #abe72a 100%);
  position: fixed;
  top: 0;
  z-index: 100;
  display: flex;
  align-items: center;
}

.header_back {
  width: 23rpx;
  height: 41rpx;
  margin-right: 30rpx;
}

.header_text {
  font-size: 36rpx;
  font-family: "MicrosoftYaHei";
  font-weight: 400;
  color: #fff;
}

.header_search {
  width: 100%;
  height: 114rpx;
  font-size: 32rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #a9a9a9;
  background: linear-gradient(90deg, #37b2f7 0%, #abe72a 100%);
}

.cu-bar .search-form {
  background: #fff;
}

.header_icon {
  font-size: 38rpx;
  color: #a9a9a9;
}

/* 内容 */

.explosives {
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
}

.explosives_title {
  width: 100%;
  padding: 28rpx 0 17rpx 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title_pic {
  width: 12rpx;
  height: 12rpx;
}

.title_text {
  font-size: 32rpx;
  font-family: "PingFang-SC-Bold";
  font-weight: bold;
  color: #333;
  margin: 0 16rpx;
}

.explosives_main {
  width: 100%;
  padding: 10rpx 20rpx 150rpx;
  display: flex;
  flex-wrap: wrap;
}

.explosives_main_list {
  width: 47%;
  margin: 10rpx;
  background: #fff;
  text-align: center;
}

.explosives_main_list_pic {
  width: 100%;
  height: 300rpx;
}

.explosives_main_list_text {
  width: 90%;
  font-size: 28rpx;
  font-family: "PingFang-SC-Medium";
  font-weight: 500;
  color: #333;
  line-height: 83rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
